{
  "extends": "@sarcoinswap/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "types": ["vitest/globals"],
    "paths": {
      "*": ["./*"],
      "@sarcoinswap/uikit": ["../../packages/uikit/src/index.ts"],
      "@sarcoinswap/uikit/*": ["../../packages/uikit/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
